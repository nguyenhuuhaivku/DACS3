<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base layer with the photo background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6650a4" />
        </shape>
    </item>
    
    <!-- Gradient overlay for better text visibility -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#00000000"
                android:centerColor="#00000000"
                android:endColor="#99000000"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Restaurant icon in the center -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size android:width="100dp" android:height="50dp" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    
    <!-- Restaurant text at the bottom -->
    <item android:bottom="10dp" android:gravity="bottom|center_horizontal">
        <shape android:shape="rectangle">
            <size android:width="160dp" android:height="30dp" />
            <solid android:color="#00000000" />
        </shape>
    </item>
</layer-list> 